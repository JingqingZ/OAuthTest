<html>
	<head>
		<title>用户列表</title>
		<% include head_link%>
	</head>
	<body>
		<% include navbar%>
		<div class="ui grid">
			<div class="one wide column">
			</div>
			<div class="fourteen wide column">
				<div class="ui link cards">
					<% for(i = 0; i < userlist.length; i++){%>
		  			<div class="card">
		  				<div class="image">
				          	<img src=<%=userlist[i].avatar_large%>>
				      	</div>
				      	<div class="content">
					      	<div class="header"><%=userlist[i].screen_name%></div>
					      	<div class="meta">
					        	<span class="date"><%= userlist[i].status.created_at%></span>
					      	</div>
					      	<div class="description">
					        	<%= userlist[i].status.text%>
					      	</div>
					    </div>
					    <div class="extra content">
					      	<span class="right floated">
					        	<%= userlist[i].location%>
					      	</span>
					      	<span>
					        	<i class="user icon"></i>
					        	<%= userlist[i].followers_count%>个粉丝
					      	</span>
					    </div>
				  	</div>
				  	<%	} %>
				</div>
			</div>
			<div class="one wide column">
			</div>
		</div>
	</body>
</html>