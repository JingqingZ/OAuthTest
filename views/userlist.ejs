<html>
	<head>
		<title>用户列表</title>
		<% include head_link%>
		<script>
			$('.special.cards .image').dimmer({
				alert("fuck!")
			  	on: 'hover'
			});
		</script>
	</head>
	<body>
		<% include navbar%>
		<div class="ui grid" style="margin-top:10px">
			<div class="one wide column">
			</div>
			<div class="fourteen wide column">
				<div class="ui special link cards">
					<% for(i = 0; i < userlist.length; i++){%>
					<div class="ui special cards">
					  	<div class="card">
					    	<div class="dimmable image">
					      	<div class="ui inverted dimmer">
					        	<div class="content">
					          		<div class="center">
					            		<div class="ui primary button"><a href="/user/<%=userlist[i].id%>">More</a></div>
					          		</div>
					        	</div>
					      	</div>
					     	<img src=<%=userlist[i].avatar_large%>>
					    </div>
					    <div class="content">
					      <a class="header"><%=userlist[i].screen_name%></a>
					      <div class="meta">
					        	<span class="date"><%= userlist[i].status.created_at%></span>
					      </div>
					      <div class="description">
					        	<%= userlist[i].status.text%>
					      	</div>
					    </div>
					    <div class="extra content">
					    	<span class="right floated">
					        	<%= userlist[i].location%>
					      	</span>
						    <span>
						        <i class="user icon"></i>
						        <%= userlist[i].followers_count%>个粉丝
						    </span>
					    </div>
					  </div>
					</div>
				  	<%	} %>
				</div>
			</div>
			<div class="one wide column">
			</div>
		</div>
	</body>
</html>